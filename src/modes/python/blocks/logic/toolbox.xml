      <shadow type="inline_text">
        <field name="value">0</field>
      </shadow>
    </value>
  </block>

  <block type="and_or">
    <value name="value_1">
      <shadow type="inline_text">
        <field name="value">True</field>
      </shadow>
    </value>
    <value name="value_2">
      <shadow type="inline_text">
        <field name="value">True</field>
      </shadow>
    </value>
  </block>

  <block type="not">
    <value name="value">
      <shadow type="inline_text">
        <field name="value">True</field>
      </shadow>
    </value>
  </block>
</category>
