  <block type="if">
    <value name="condition">
      <shadow type="inline_text">
        <field name="value">True</field>
      </shadow>
    </value>
  </block>

  <block type="elif">
    <value name="condition">
      <shadow type="inline_text">
        <field name="value">True</field>
      </shadow>
    </value>
  </block>

  <block type="else"></block>

  <block type="compare">
    <value name="value_1">
