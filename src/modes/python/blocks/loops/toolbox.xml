<category name="Loops" colour="#644A9E" css-icon="customIcon fas fa-rotate-right">
  <label text="Loops"></label>

  <block type="while">
    <value name="condition">
      <shadow type="inline_text">
        <field name="value">True</field>
      </shadow>
    </value>
  </block>

  <block type="for_range">
    <value name="parameters">
      <shadow type="parameters">
          <mutation color="#644A9E" items="1" limit="3" minimum="1" inputType="number" />
          <value name="input_1">
              <shadow type="inline_number">
                  <field name="value">10</field>
              </shadow>
          </value>
      </shadow>
    </value>
  </block>

  <block type="for_range">
    <value name="parameters">
      <shadow type="parameters">
          <mutation color="#644A9E" items="2" limit="3" minimum="1" inputType="number" />
          <value name="input_1">
              <shadow type="inline_number">
                  <field name="value">5</field>
              </shadow>
          </value>
          <value name="input_2">
              <shadow type="inline_number">
                  <field name="value">10</field>
              </shadow>
          </value>
      </shadow>
    </value>
  </block>

  <block type="for"></block>
  
  <block type="break"></block>
</category>
