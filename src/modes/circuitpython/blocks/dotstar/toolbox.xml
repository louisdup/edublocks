<category name="Dotstar" colour="#CDDA36" css-icon="customIcon fad fa-stars">
  <label text="Dotstar"></label>
  <block type="dotstar_setup">
    <value name="parameters">
      <shadow type="parameters">
          <mutation color="#CDDA36" items="3" limit="4" minimum="2" inputType="text" />
          <value name="input_1">
            <shadow type="inline_text">
                <field name="value">board.APA102_SCK</field>
            </shadow>
          </value>
          <value name="input_2">
            <shadow type="inline_text">
                <field name="value">board.APA102_MOSI</field>
            </shadow>
          </value>
          <value name="input_3">
              <shadow type="inline_number">
                  <field name="value">1</field>
              </shadow>
          </value>
      </shadow>
    </value>
  </block>

  <block type="dotstar_set">
    <value name="value">
      <shadow type="inline_number">
          <field name="value">0</field>
      </shadow>
    </value>
    <value name="parameters">
      <shadow type="parameters">
          <mutation color="#CDDA36" items="3" limit="3" minimum="1" inputType="number" />
          <value name="input_1">
              <shadow type="inline_number">
                  <field name="value">255</field>
              </shadow>
          </value>
          <value name="input_2">
              <shadow type="inline_number">
                  <field name="value">0</field>
              </shadow>
          </value>
          <value name="input_3">
              <shadow type="inline_number">
                  <field name="value">128</field>
              </shadow>
          </value>
      </shadow>
    </value>
  </block>

  <block type="dotstar_show"></block>

  <block type="dotstar_fill">
    <value name="parameters">
      <shadow type="parameters">
          <mutation color="#CDDA36" items="1" limit="1" minimum="1" inputType="number" />
          <value name="input_1">
            <shadow type="inline_text">
                <field name="value"></field>
            </shadow>
          </value>
      </shadow>
    </value>
  </block>

  <block type="dotstar_brightness">
    <value name="value">
      <shadow type="inline_number">
          <field name="value">0.3</field>
      </shadow>
    </value>
  </block>
</category> 
